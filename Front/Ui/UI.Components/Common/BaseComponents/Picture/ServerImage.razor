@using App.Common.General
<MudImage Src="@_src"
          Alt="@Alt"
          Width="@Width"
          Height="@Height"
          ObjectFit="@ObjectFit"
          ObjectPosition="@ObjectPosition"
          Class="@Class"
          Style="@Style"
          @attributes="AdditionalAttributes">
</MudImage>

@if (ShowCaption && !string.IsNullOrWhiteSpace(Caption))
{
    <MudText Typo="Typo.caption" Align="Align.Center">@Caption</MudText>
}

@code {
    

    

    [Parameter] public string Src { get; set; } = string.Empty;
    [Parameter] public string Alt { get; set; } = string.Empty;
    [Parameter] public int? Width { get; set; }
    [Parameter] public int? Height { get; set; }
    [Parameter] public ObjectFit ObjectFit { get; set; } = ObjectFit.Cover;
    [Parameter] public ObjectPosition ObjectPosition { get; set; } = ObjectPosition.Center;
    [Parameter] public string? Caption { get; set; }
    [Parameter] public bool ShowCaption { get; set; }
    [Parameter] public string? Class { get; set; }
    [Parameter] public string? Style { get; set; }

    private string _src => ApplicationConstants.Server.BaseUrl + Src;


    [Parameter(CaptureUnmatchedValues = true)]
    public Dictionary<string , object>? AdditionalAttributes { get; set; }

}