@page "/"

<style>
    .equal-height-box {
        display: flex;
        flex-direction: column;
        min-height: 100%;
    }
</style>
<MudContainer MaxWidth="MaxWidth.ExtraExtraLarge" Style="padding: 24px">
    <MudGrid Justify="Justify.SpaceBetween">


        <MudItem md="12" lg="6">
            
            <MudPaper class="equal-height-box rounded-xl mb-3 px-3 py-2 p-2">
                <DoctorInfo/>

            </MudPaper>
        </MudItem>

        <MudItem md="12" lg="6">
            <MudPaper class="equal-height-box rounded-xl mb-3 px-3 py-2 p-2">
                <ClinicInfo/>
            </MudPaper>
        </MudItem>
        <MudItem md="12" lg="12">
            <MudPaper Class="rounded-xl mb-3 px-3 py-2 p-2">
                <ServiceInfoCard _canEdit="false"/>
            </MudPaper>

        </MudItem>

        <!-- Row 1 -->

        <!-- Row 2 -->
        <MudItem md="12" lg="12">
            <MudPaper Class="rounded-xl mb-3 px-3 py-2 p-2">
                <Apointments ShowFilters="false" From="DateOnly.FromDateTime(DateTime.Now)"
                             To="DateOnly.FromDateTime(DateTime.Now)"/>
            </MudPaper>
        </MudItem>
    </MudGrid>
</MudContainer>